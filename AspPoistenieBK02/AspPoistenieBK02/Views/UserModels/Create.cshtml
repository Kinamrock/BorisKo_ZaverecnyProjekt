@model AspPoistenieBK02.Models.UserModel

@{
    ViewData["Title"] = "Create User";
}

<div class="container-lg justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" placeholder="meno"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" placeholder="priezvisko"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="email@aa.aa"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="+420 000 000 000"/>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" value="1990-01-01" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserGender" class="control-label"></label>
                <select asp-for="UserGender" asp-items="Html.GetEnumSelectList<UserModel.EUserGender>()" class="form-select"></select>
                <span asp-validation-for="UserGender" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="UserAdress" class="control-label"></label>
                <input asp-for="UserAdress" class="form-control" placeholder="ulica 00" />
                <span asp-validation-for="UserAdress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserCity" class="control-label"></label>
                <input asp-for="UserCity" class="form-control" placeholder="mesto" />
                <span asp-validation-for="UserCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserZipCode" class="control-label"></label>
                <input asp-for="UserZipCode" class="form-control" placeholder="000 00" />
                <span asp-validation-for="UserZipCode" class="text-danger"></span>
            </div>
            <br/>
            <div class="btn-group" role="group">
                <button class="btn btn-success" type="submit" value="Create">@StringCommon.sc008_AddUser</button>
                <a class="btn btn-secondary" asp-action="Index">@StringCommon.sc007_BackToList</a>
            </div>
        </form>
    </div>
</div>



